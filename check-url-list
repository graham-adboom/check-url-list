#!/usr/bin/php -q

<?php

$file_path = $argv[1];

if(!file_exists($file_path)) {

  echo '"' . $file_path . '"';
  echo " file does not exist.";

} else {

  $file = fopen($file_path, "r") or exit("Unable to open file!");
  //Output a line of the file until the end is reached
  while(!feof($file)) {
    $line = fgets($file);

    $url = urldecode($line);

    $ch = curl_init();

    curl_setopt($ch, CURLOPT_URL,$url);
    curl_setopt($ch, CURLOPT_HEADER, true);
    curl_setopt($ch, CURLOPT_FOLLOWLOCATION, TRUE);
    curl_setopt($ch, CURLOPT_RETURNTRANSFER, TRUE);

    $html = curl_exec($ch);

    $status_code = curl_getinfo($ch, CURLINFO_HTTP_CODE);
    // $redirect_url = curl_getinfo($ch, CURLINFO_EFFECTIVE_URL);

    $curl_info = curl_getinfo($ch);

    $redirect_url = $curl_info['url'];

    echo "Checked URL: " . $url . "\r";

    echo "Last Header Code: ";

    if($status_code == "301" || $status_code == "200") {
      echo "\033[32m" . $status_code . "\033[37m";
    } else {
      echo "\033[31m" . $status_code . "\033[37m";
    }

    echo " Last URL: " . $redirect_url . "\n\n";

    sleep(0.5);

  }
  fclose($file);

}

?>